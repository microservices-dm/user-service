APP_ENV=dev
APP_SECRET=changeme-user-service-secret-key

# Database
DATABASE_URL="postgresql://user:password@user_db:5432/user_db?serverVersion=16&charset=utf8"

# Redis
REDIS_URL=redis://redis:6379

# RabbitMQ
MESSENGER_TRANSPORT_DSN=amqp://guest:guest@rabbitmq:5672/%2f/messages

# JWT Configuration
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your-strong-passphrase-here
JWT_TTL=3600

# Refresh Token TTL (в секундах, 7 дней)
REFRESH_TOKEN_TTL=604800
